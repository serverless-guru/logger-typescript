{
    "env": {
        "es2021": true,
        "node": true,
    },
    "ignores": ["**/dist/"],
    "rules": {
        "linebreak-style": ["error", "unix"],
        "quotes": [
            "error",
            "double",
            {
                "allowTemplateLiterals": true,
            },
        ],
        "no-case-declarations": "off",
        "object-curly-spacing": ["error", "never"],
    },
}
